{% extends 'base.html.twig' %}

{% block title %}Rating{% endblock %}

{% block body %}
    <h1>Rating</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ rating.id }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ rating.value }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ rating.comment }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ rating.date ? rating.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>



    <a href="{{ path('app_rating_edit', {'id': rating.id}) }}">Editer</a>

{% endblock %}
