<form method="post" action="{{ path('app_rating_delete', {'id': rating.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer votre critique?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ rating.id) }}">
    <button class="m-2 text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" class="btn">Supprimer</button>
</form>
